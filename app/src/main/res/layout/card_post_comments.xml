<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comments_circle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/comments_name"
            android:layout_toRightOf="@+id/comments_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hhhh"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp">
        </TextView>
        <TextView
            android:id="@+id/comments_date"
            android:layout_toRightOf="@+id/comments_circle"
            android:layout_below="@+id/comments_name"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/comments_title"
            android:layout_below="@+id/comments_circle"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hhhhhhhhhhhhh"
            android:textColor="@color/black"
            android:textSize="16sp">
        </TextView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@id/comments_title"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/comments_like"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_post_thumb"></ImageView>
            <TextView
                android:id="@+id/like_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="15"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/comments_like"
                >
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>