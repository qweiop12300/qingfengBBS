<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/action_bar_circle"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="10dp">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/action_bar_search"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_toRightOf="@+id/action_bar_circle"
        android:layout_toLeftOf="@+id/action_bar_news"
        android:background="@drawable/search_radius"></TextView>

    <ImageView
        android:id="@+id/action_bar_news"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/action_bar_add"></ImageView>

    <ImageView
        android:id="@+id/action_bar_add"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"></ImageView>
</RelativeLayout>