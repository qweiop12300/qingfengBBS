<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    tools:context=".ui.activity.PostDetailsActivity">

    <include
        android:id="@+id/post_details_include"
        layout="@layout/back_action_bar"></include>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/post_details_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_details_include">
        <androidx.core.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/post_details_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                        <TextView
                            android:id="@+id/post_details_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:text="hhhhhhhhhhhhhhhhhhjhhhhhhhhhhhhhh"
                            android:textColor="@color/black">
                        </TextView>
                        <TextView
                            android:id="@+id/post_details_mark"
                            android:layout_below="@id/post_details_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                        </TextView>
                        <TextView
                            android:id="@+id/post_details_time"
                            android:layout_below="@id/post_details_mark"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/post_details_card"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <TextView
                            android:id="@+id/post_comments_size"
                            android:layout_width="wrap_content"
                            android:layout_height="?attr/actionBarSize"
                            android:text="评论(0)"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="18sp">
                        </TextView>
                        <com.chenbaolu.qflt.CustomizeView.RecyclerView
                            android:id="@+id/comments_rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="50dp">
                        </com.chenbaolu.qflt.CustomizeView.RecyclerView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/post_comments"
                android:layout_toLeftOf="@+id/post_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:text="发射！biu~"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/search_radius">
            </TextView>
            <ImageView
                android:id="@+id/post_like"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:src="@drawable/ic_post_thumb"
                android:layout_toLeftOf="@id/post_star">

            </ImageView>
            <ImageView
                android:id="@+id/post_star"
                android:layout_alignParentRight="true"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:src="@drawable/ic_post_star">
            </ImageView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>