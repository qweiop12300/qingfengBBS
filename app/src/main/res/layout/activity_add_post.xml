<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    tools:context=".ui.activity.AddPostActivity">

    <include layout="@layout/back_boolbar"
        android:id="@+id/add_post_bool">
    </include>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_post_bool"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_post_tl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/add_post_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="标题">
                </EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_post_tl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_post_tl1">
                <EditText
                    android:id="@+id/add_post_connect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="5"
                    android:gravity="start"
                    android:hint="内容">
                </EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/add_post_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/button_radius"
                android:text="提交"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/add_post_tl2"
                android:layout_marginTop="15dp"></Button>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/add_post_rec"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/add_post_commit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/add_post_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_action_image">
            </ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>