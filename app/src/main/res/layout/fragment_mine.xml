<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/mine_tool"
        layout="@layout/default_action_bar"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/mine_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_below="@+id/mine_tool"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            app:cardCornerRadius="20dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mine_circler"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:src="@drawable/icon">
                </de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:id="@+id/mine_user_name"
                    android:layout_toRightOf="@+id/mine_circler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="用户ldjaskldjkalsd"
                    android:textColor="@color/black"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:id="@+id/mine_attention"
                    android:layout_below="@+id/mine_user_name"
                    android:layout_toRightOf="@id/mine_circler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:text="关注  0">
                </TextView>
                <TextView
                    android:id="@+id/mine_fan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/mine_attention"
                    android:layout_below="@+id/mine_user_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="粉丝  0">
                </TextView>
                <LinearLayout
                    android:layout_below="@id/mine_circler"
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/mine_r1"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:layout_gravity="center_horizontal"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:src="@drawable/ic_mine_comments"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="我的帖子"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:layout_marginTop="5dp">
                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/mine_r2"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:src="@drawable/ic_mine_like"
                            >
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="我的点赞"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:layout_marginTop="5dp">
                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/mine_r3"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:src="@drawable/ic_mine_collects"
                            >
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="我的收藏"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:layout_marginTop="5dp">
                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/mine_r4"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:src="@drawable/ic_mine_message"
                            >
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="我的评论"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:layout_marginTop="5dp">
                        </TextView>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</RelativeLayout>